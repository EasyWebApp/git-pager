{
    "name": "git-pager",
    "version": "0.6.0",
    "description": "GitHub Pages editor based on WebCell",
    "keywords": [
        "github",
        "github-pages",
        "web",
        "editor",
        "markdown",
        "web-cell",
        "component"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "homepage": "https://web-cell.tk/git-pager/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/git-pager.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/git-pager/issues"
    },
    "main": "index.js",
    "directories": {
        "lib": "source/",
        "test": "."
    },
    "engines": {
        "node": "^8.0.0"
    },
    "scripts": {
        "dev": "web-cell preview",
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json}\"",
        "lint": "eslint . --ignore-pattern dist/ --fix",
        "build": "npm run format  &&  npm run lint  &&  web-cell pack",
        "test": "npm run build",
        "start": "web-server -p LEANCLOUD_APP_PORT --CORS"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test  &&  git add ."
        }
    },
    "dependencies": {
        "@babel/polyfill": "^7.2.3",
        "@webcomponents/webcomponentsjs": "^2.2.1",
        "github-markdown-css": "^2.10.0",
        "koapache": "^1.0.4",
        "markdown-ime": "^1.0.3",
        "marked": "^0.5.2",
        "material-cell": "^0.9.1",
        "resize-observer-polyfill": "^1.5.1",
        "web-cell": "^0.10.12",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.2.3",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.10.0",
        "husky": "^1.2.1",
        "prettier": "^1.15.3",
        "web-cell-cli": "^0.8.0"
    },
    "babel": {
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "decoratorsBeforeExport": true
                }
            ]
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
